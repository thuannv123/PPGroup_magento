                <submenu_text_hover>#376EFB</submenu_text_hover>
                <current_category_color>#376EFB</current_category_color>
                <toggle_icon_color>#9EADC7</toggle_icon_color>
                <hamburger_icon_color>#9EADC7</hamburger_icon_color>
            </color>
        </ammegamenu>
    </default>
