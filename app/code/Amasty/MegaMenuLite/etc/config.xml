        <ammegamenu>
            <general>
                <enabled>0</enabled>
                <mobile_template>accordion</mobile_template>
                <mobile_menu_width>1024</mobile_menu_width>
            </general>
            <color>
                <color_template>custom</color_template>
                <main_menu_background>#F5F8FF</main_menu_background>
