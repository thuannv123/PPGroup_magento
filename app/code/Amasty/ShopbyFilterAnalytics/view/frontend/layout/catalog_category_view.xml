<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block name="amasty.shopby.filter_analytics" template="Amasty_ShopbyFilterAnalytics::filter_analytics.phtml"
                   ifconfig="amshopbyfilteranalytics/analytic/enabled">
                <arguments>
                    <argument name="filter_analytics"
                              xsi:type="object">\Amasty\ShopbyFilterAnalytics\ViewModel\FilterAnalytics
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
