        <referenceBlock name="header.links">
            <block class="Amasty\Faq\Block\Link" ifconfig="amastyfaq/general/add_to_toolbar_menu" name="amfaq_top_link" after="authorization-link-login"/>
        </referenceBlock>
        <referenceBlock name="top.links">
            <block class="Amasty\Faq\Block\Link" ifconfig="amastyfaq/general/add_to_toolbar_menu" name="amfaq_top_link_blank" after="authorization-link-login"/>
        </referenceBlock>
        <referenceBlock name="footer_links">
            <block class="Amasty\Faq\Block\Link" ifconfig="amastyfaq/general/add_to_footer_menu" name="amfaq_footer_link"/>
        </referenceBlock>
    </body>
</page>
