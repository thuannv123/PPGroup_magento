                    <label>Enable GDPR consent</label>
                    <depends>
                        <field id="use_comments">1</field>
                    </depends>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="gdpr_text" translate="label comment" type="textarea" sortOrder="150" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>GDPR Consent Text</label>
                    <depends>
                        <field id="use_comments">1</field>
                        <field id="gdpr">1</field>
                    </depends>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
