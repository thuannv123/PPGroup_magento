                    <validate>required-entry</validate>
                    <backend_model>Amasty\Blog\Model\Config\Backend\Route</backend_model>
                </field>

                <field id="title" translate="label comment" type="text" sortOrder="15" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Blog Home Page Title</label>
                </field>

                <field id="bread" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Blog Home Page Breadcrumb Label</label>
                </field>

                <field id="meta_title" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Blog Home Page Meta Title</label>
