                <field id="title_suffix" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Blog Pages Meta Title Suffix</label>
                </field>

                <field id="organization_name" translate="label comment" type="text" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Organization Name</label>
                    <comment>Used for creation post microdata.</comment>
                </field>

                <field id="meta_robots" translate="label comment" type="select" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Meta Robots</label>
                    <source_model>Amasty\Blog\Model\Config\Source\MetaRobots</source_model>
                </field>
            </group>

            <group id="redirect" translate="label" type="text" sortOrder="25" showInDefault="1" showInWebsite="1" showInStore="1">
