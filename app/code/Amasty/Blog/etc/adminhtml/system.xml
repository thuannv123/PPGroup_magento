                </field>

                <field id="redirect_to_seo_formatted_url" translate="label comment" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Redirect to SEO-Formatted URL</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

            </group>

            <group id="layout" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Layout</label>
                <field id="mobile_list" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Mobile List</label>
                    <frontend_model>Amasty\Blog\Block\Adminhtml\System\Config\Field\Layout\Mobile\Mlist</frontend_model>
                    <backend_model>Amasty\Blog\Model\Config\Backend\LayoutConfig</backend_model>
                </field>
                <field id="mobile_post" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Mobile Post</label>
                    <frontend_model>Amasty\Blog\Block\Adminhtml\System\Config\Field\Layout\Mobile\Post</frontend_model>
                    <backend_model>Amasty\Blog\Model\Config\Backend\LayoutConfig</backend_model>
                </field>
                <field id="desktop_list" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Desktop List</label>
                    <frontend_model>Amasty\Blog\Block\Adminhtml\System\Config\Field\Layout\Desktop\Mlist</frontend_model>
                    <backend_model>Amasty\Blog\Model\Config\Backend\LayoutConfig</backend_model>
                </field>
                <field id="desktop_post" translate="label comment" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Desktop Post</label>
                    <frontend_model>Amasty\Blog\Block\Adminhtml\System\Config\Field\Layout\Desktop\Post</frontend_model>
                    <backend_model>Amasty\Blog\Model\Config\Backend\LayoutConfig</backend_model>
                </field>
            </group>
            <group id="list" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>List</label>
                <field id="count_per_page" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Number of Posts per Page</label>
                </field>
                <field id="display_blog_summary" translate="label comment" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Display Blog Summary</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="summary_cms_block" translate="label comment" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label> Select CMS Summary Block</label>
                    <source_model>Magento\Catalog\Model\Category\Attribute\Source\Page</source_model>
                    <comment>Please make sure that CMS Block is enabled.</comment>
                    <depends>
                        <field id="display_blog_summary">1</field>
                    </depends>
                </field>
            </group>
            <group id="post" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Post</label>
                <field id="display_author" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Display Author Name</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="display_views" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Display Number of Views</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="display_read_time" translate="label" type="select" sortOrder="25" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Display Read Time</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="display_tags" translate="label comment" type="select" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Display Tags</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="date_manner" translate="label comment" type="select" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Created Date Format</label>
                    <source_model>Amasty\Blog\Model\Config\Source\Date</source_model>
                </field>
                <field id="display_edited_date" translate="label comment" type="select" sortOrder="71" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Display the date when blog post was edited</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="edited_date_format" translate="label comment" type="select" sortOrder="72" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Edited Date Format</label>
                    <source_model>Amasty\Blog\Model\Config\Source\Date</source_model>
                    <depends>
                        <field id="display_edited_date">1</field>
                    </depends>
                </field>
                <field id="image_width" translate="label comment" type="text" sortOrder="80" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Width of image on Blog page</label>
                    <validate>required-entry validate-number validate-greater-than-zero validate-number-range number-range-1-10000</validate>
                </field>
                <field id="image_height" translate="label comment" type="text" sortOrder="90" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Height of image on Blog page</label>
                    <validate>required-entry validate-number validate-greater-than-zero validate-number-range number-range-1-10000</validate>
                </field>
                <field id="helpful" translate="label comment" type="select" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable 'Like' Control </label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="previous_next_navigation" translate="label comment" type="select" sortOrder="110"
                       showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Previous-Next Navigation</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Setting will enable prev-next navigation between posts based on their published date.</comment>
                </field>
            </group>

            <group id="post_rich_data" translate="label" type="text" sortOrder="43"
                   showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Post Rich Data</label>

                <field id="show_title" translate="label" type="select" sortOrder="20"
                       showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Show Title</label>
                    <comment>The ‘Title’ and ‘Meta Title’ options determine priority if a post has both values.
                        If the post has only one of these parameters specified, so it will be displayed in the Rich Snippets.
                        Leave ‘None’ not to display any title information.</comment>
                    <source_model>Amasty\Blog\Model\Source\RichData\Title</source_model>
                </field>
                <field id="show_author_name" translate="label" type="select" sortOrder="30"
                       showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Show Author Name</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="show_author_url" translate="label" type="select" sortOrder="40"
                       showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Show Author Url</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="show_author_type" translate="label" type="select" sortOrder="50"
                       showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Show Author Type</label>
                    <source_model>Amasty\Blog\Model\Source\RichData\AuthorType</source_model>
                </field>
                <field id="show_publication_date" translate="label" type="select" sortOrder="60"
                       showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Show Publication Date</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="show_image" translate="label" type="select" sortOrder="70"
                       showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Show Image</label>
                    <comment>The ‘Post Image’ and ‘List Image’ options determine priority if a post has both values.
                        If the post has only one of these parameters specified, so it will be displayed in the Rich Snippets.
                        Leave ‘None’ not to display any image.</comment>
                    <source_model>Amasty\Blog\Model\Source\RichData\Image</source_model>
                </field>
            </group>

            <group id="category" translate="label" type="text" sortOrder="45" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Categories</label>

                <field id="display_categories" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Show Categories the Post Belongs to</label>
                    <comment>If enabled, the categories block will be displayed on post view and listings pages.</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="limit_on_post" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Limit of Categories to Show on Post</label>
                    <validate>validate-number validate-zero-or-greater</validate>
                    <comment>If empty or 0, all categories assigned to a blog post will be displayed.</comment>
                    <depends>
                        <field id="display_categories">1</field>
                    </depends>
                </field>

                <field id="categories_limit" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Limit of Categories in Layout Widget</label>
                    <comment>Defines the number of categories per each level to be shown in the categories tree.</comment>
                    <validate>validate-number validate-zero-or-greater</validate>
                </field>
            </group>

            <group id="comments" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Comments</label>
                <field id="use_comments" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Use Comments</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="autoapprove" translate="label comment" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Automatic Approving</label>
                    <depends>
                        <field id="use_comments">1</field>
                    </depends>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="allow_guests" translate="label comment" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Allow Guest Comments</label>
                    <depends>
                        <field id="use_comments">1</field>
                    </depends>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="record_limit" translate="label comment" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Quantity of Recent Comments in Block</label>
                    <depends>
                        <field id="use_comments">1</field>
                    </depends>
                </field>
                <field id="display_short" translate="label comment" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Display Short Content for Recent Comments</label>
                    <depends>
                        <field id="use_comments">1</field>
                    </depends>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="display_date" translate="label comment" type="select" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Display Date for Recent Comments</label>
                    <depends>
                        <field id="use_comments">1</field>
                    </depends>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="ask_email" translate="label comment" type="select" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Ask Email for Comment</label>
                    <depends>
                        <field id="use_comments">1</field>
                    </depends>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="ask_name" translate="label comment" type="select" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Ask Name for Comment</label>
                    <depends>
                        <field id="use_comments">1</field>
                    </depends>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="notify_about_replies" translate="label comment" type="select" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Notify Customers about Replies to Comments</label>
                    <depends>
                        <field id="use_comments">1</field>
                    </depends>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="sender" translate="label comment" type="select" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Email Sender</label>
                    <source_model>Magento\Config\Model\Config\Source\Email\Identity</source_model>
                    <depends>
                        <field id="enabled">1</field>
                        <field id="notify_about_replies">1</field>
                    </depends>
                </field>
