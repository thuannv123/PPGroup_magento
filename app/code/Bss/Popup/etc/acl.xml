<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::marketing">
                    <resource id="Bss_Popup::main" title="BSSCommerce Pop-up" sortOrder="200">
                        <resource id="Bss_Popup::popup" title="Manage Pop-up" sortOrder="1"/>
                        <resource id="Bss_Popup::save" title="Pop-up Writable" sortOrder="2"/>
                        <resource id="Bss_Popup::delete" title="Pop-up Deletable" sortOrder="3"/>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Bss_Popup::config_popup" title="Pop-up Settings" sortOrder="10"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
