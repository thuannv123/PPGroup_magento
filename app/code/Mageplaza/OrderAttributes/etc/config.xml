<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <mporderattributes>
            <general>
                <enabled>1</enabled>
            </general>
            <checkout_configuration>
                <date_format>yy-mm-dd</date_format>
                <time_format>HH:mm:ss</time_format>
            </checkout_configuration>
            <m2_pdf_docs>
                <display_attribute_into_shipment>1</display_attribute_into_shipment>
                <display_attribute_into_invoice>1</display_attribute_into_invoice>
            </m2_pdf_docs>
        </mporderattributes>
    </default>
</config>
