<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="after.body.start">
            <container name="accesstrade_container">
                <block class="Magento\Framework\View\Element\Template"
                       name="accesstrade_common_script"
                       template="PPGroup_AccessTrade::script-common.phtml"
                       ifconfig="accesstrade/settings/enabled">
                    <arguments>
                        <argument name="view_model" xsi:type="object">PPGroup\AccessTrade\ViewModel\Common</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
