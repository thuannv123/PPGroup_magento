            <group id="general" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <label>Design</label>
                <field id="layout" translate="label comment" type="select" sortOrder="55" showInDefault="20" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Layout</label>
                    <source_model>PPGroup\Cms\Model\Page\Source\PageLayout</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
