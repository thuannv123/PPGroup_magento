<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.wrapper">
            <container before="main.content" name="header-global-promo" label="Page Header Global Promo" as="header-wrapper-global-promo" htmlTag="div" htmlClass="header-global-promo">
                <block class="Magento\Framework\View\Element\Template" name="weltpixel_global_promo_message" as="weltpixel_global_promo_message" template="WeltPixel_CustomHeader::global_promo.phtml"/>
            </container>
        </referenceContainer>
        <move element="header-global-promo" destination="page.top" before="breadcrumbs"/>
    </body>
</page>
