<?php endif; ?>
<?php if ($reviewCount) : ?>
        <?php if ($reviewsFormat != 0) : ?>
        "aggregateRating": {
            "@type": "AggregateRating",
            "bestRating": 5,
            "worstRating": 1,
            "ratingValue": "<?php echo $ratingSummary / 20; ?>",
