                        <item name="wysiwyg" xsi:type="boolean">false</item>
                        <item name="scopeLabel" xsi:type="string">[STORE VIEW]</item>
                        <item name="label" xsi:type="string" translate="true">Right Custom HTML</item>
                    </item>
